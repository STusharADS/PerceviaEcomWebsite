# MongoDB connection
# If using a full MongoDB URI (recommended for Atlas), set MONGO_DB_URI to the connection string.
MONGO_DB_URI=mongodb+srv://<user>:<password>@cluster0.mongodb.net/percevia?retryWrites=true&w=majority

# If you prefer user/pass separated settings (db.js supports MONGO_DB_USER / MONGO_DB_PASS)
MONGO_DB_USER=
MONGO_DB_PASS=

# JWT secret for signing tokens
JWT_SECRET=devsecret44

# Optional: admin seed credentials (only used if no admin user exists)
SEED_ADMIN_EMAIL=admin@percevia.local
SEED_ADMIN_PASS=password123

# Set the port (optional)
PORT=3000
